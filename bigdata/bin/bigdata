#!/bin/sh

# determine bigdata home
BD_HOME=`dirname "$0"`/..

#make BD_HOME absolute
BD_HOME=`cd "$BD_HOME"; pwd`

if [ -x "$JAVA_HOME/bin/java" ]; then
	JAVA=$JAVA_HOME/bin/java
else
	JAVA=`which java`
fi

if [ ! -x "$JAVA" ]; then
	echo "Could not find any executable java binary. Please install java in your PATH or set JAVA_HOME"
	exit 1
fi

BD_CLASSPATH=$CLASSPATH:$BD_HOME/target/classes

for jarfile in $BD_HOME/target/lib/*.jar; do
	BD_CLASSPATH=$BD_CLASSPATH:$jarfile
done

BD_CLASSNAME="com.nflabs.bigdata.BigDataCli"

exec "$JAVA" -cp "$BD_CLASSPATH" "$BD_CLASSNAME" "$@"
